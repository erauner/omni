############################################################
#  Omni – local-laptop (nip.io) environment
############################################################

############################
# Basic runtime settings
############################
TZ=America/Chicago                    # Adjust if your laptop is in another zone

############################
# Omni instance identity
############################
# Any UUID will do; keep it stable once you start adding Talos clusters
OMNI_ACCOUNT_ID=00000000-0000-0000-0000-000000000000
OMNI_NAME=omni-local                  # Human-readable label for this control-plane
OMNI_REGION=homelab                   # Free-form; shown in the UI

############################
# Network exposure
############################
# Public hostname you’ll hit from a browser *and* that Omni will advertise to Talos nodes
# Replace 192-168-1-42 with YOUR laptop’s LAN IP – keep the dashes!
OMNI_ADVERTISE_ADDRESS=omni.erauner.synology.me
OMNI_API_SERVER_ADVERTISE_ADDRESS=omni.erauner.synology.me

# --- When you later cut over to public DNS (Cloudflare, etc.), swap again:
# OMNI_ADVERTISE_ADDRESS=omni.erauner.app
# OMNI_API_SERVER_ADVERTISE_ADDRESS=omni.erauner.app

# Disable if you don’t want Sidero Labs’ anonymous telemetry
OMNI_TELEMETRY_ENABLED=true

############################
# Initial admin user
############################
# The first person to sign in with this e-mail gets administrator rights
OMNI_INITIAL_USER=raunerevan@gmail.com

############################
# Auth0 OIDC provider (SPA client)
############################
AUTH0_DOMAIN=dev-zysv6k3xo7pkwmcb.us.auth0.com
AUTH0_CLIENT_ID=1SEMOirBr1eyxGzD70rB4jwjrgA4eUaw
# Leave empty unless you create a custom API in Auth0
AUTH0_AUDIENCE=https://omni-api

############################
# Etcd encryption key (generated with GPG)
############################
# Path **inside the container**; compose mounts omni.asc here
OMNI_PRIVATE_KEY_PATH=/run/secrets/omni-private-key/omni.asc

DOMAIN=erauner.synology.me

